                                <span class="card-title">Add Assignment</span>
                                <form class="container" action="/addassignment" method="POST" encType="multipart/form-data">
                                    <div class="input-field">
                                        <input name="number" type="number" class="validate">
                                        <label for="last_name">Assignment number</label>
                                    </div>
                                    <div class="input-field">
                                        <input name="assname" type="text" class="validate">
                                        <label for="last_name">Assignment Name</label>
                                    </div>
                                    <div class="input-field">
                                        <input name="assdes" type="text" class="validate">
                                        <label for="last_name">Assignment Description</label>
                                    </div>
                                    <div class="file-field input-field">
                                        <h6>Testcase</h6>
                                        <div class="btn">
                                            <span>File</span>
                                            <input type="file" name="table">
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text">
                                        </div>
